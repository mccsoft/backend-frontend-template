{
  "name": "e2e",
  "packageManager": "yarn@3.3.0",
  "devDependencies": {
    "@playwright/test": "1.35.0",
    "@types/randomstring": "1.1.8",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "axios": "1.3.2",
    "dotenv": "16.0.3",
    "eslint": "8.33.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-prettier": "4.2.1",
    "http-server": "14.1.1",
    "randomstring": "1.2.3",
    "react-query-swagger": "15.10.7",
    "sinon": "15.0.1",
    "typescript": "5.0.4"
  },
  "scripts": {
    "typecheck": "yarn tsc && yarn eslint",
    "show-trace-local-run": "yarn playwright show-trace test-results/**/trace.zip",
    "eslint": "eslint --config \\.eslintrc.js --no-eslintrc \\*\\*/\\*.ts --quiet ",
    "test-storybook": "STORYBOOK=1 npx playwright test",
    "test": "npx playwright test",
    "generate-api-client": "react-query-swagger /input:https://localhost:5001/swagger/v1/swagger.json /output:src/api/query-client.ts /template:Axios /serviceHost:. /no-hooks /minimal",
    "generate-api-client-remote": "react-query-swagger /input:https://template.mcc-soft.de/swagger/v1/swagger.json /output:src/api/query-client.ts /template:Axios /serviceHost:. /no-hooks /minimal",
    "update-storybook-snapshots-linux": "cd .. && docker run --env STORYBOOK_URL=http://host.docker.internal:6006 --env STORYBOOK=1 --rm --network host -v $(pwd):/work/ -w /work/e2e -it mcr.microsoft.com/playwright:v1.35.0-focal npx playwright test storybook -j 1 --update-snapshots",
    "update-e2e-snapshots-linux": "cd .. && docker run --env BASE_URL=https://host.docker.internal:5003 --rm --network host -v $(pwd):/work/ -w /work/e2e -it mcr.microsoft.com/playwright:v1.35.0-focal npx playwright test tests -j 1 --update-snapshots"
  }
}
